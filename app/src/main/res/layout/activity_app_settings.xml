<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        tools:context=".ui.launchFlow.login.LoginActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rootContainer"
            android:fitsSystemWindows="true">

            <FrameLayout
                android:id="@+id/fl_headign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:paddingHorizontal="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/tv_verify_text"
                    style="@style/Heading3_semiBold"
                    android:text="@string/app_setting"
                    android:layout_gravity="start"
                    android:textSize="24dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_add"
                    android:rotation="45"
                    android:id="@+id/tv_close"
                    android:layout_gravity="end|center" />
            </FrameLayout>




            <LinearLayout
                android:id="@+id/ll_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:padding="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@drawable/curved_border"
                app:layout_constraintTop_toBottomOf="@+id/fl_headign">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        style="@style/Heading3_semiBold"
                        android:text="@string/dark_light"
                        android:layout_gravity="start|center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="end|center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        style="@style/Heading3_semiBold"
                        android:text="@string/small_large"
                        android:layout_gravity="start|center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="end|center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        style="@style/Heading3_semiBold"
                        android:text="@string/call_cinfirm"
                        android:layout_gravity="start|center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="end|center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        style="@style/Heading3_semiBold"
                        android:text="@string/call_record"
                        android:layout_gravity="start|center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="end|center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        style="@style/Heading3_semiBold"
                        android:text="@string/theme"
                        android:layout_gravity="start|center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="end|center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        style="@style/Heading3_semiBold"
                        android:text="@string/password"
                        android:layout_gravity="start|center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="end|center" />
                </FrameLayout>

                <Button
                    style="@style/btn_main"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_36sdp"
                    android:layout_marginTop="24dp"
                    android:text="@string/update"
                    android:textSize="20dp"
                    app:chipCornerRadius="8dp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
