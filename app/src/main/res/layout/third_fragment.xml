<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rltvImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_270sdp"
            android:layout_marginStart="@dimen/_minus40sdp"
            android:layout_marginEnd="@dimen/_minus50sdp"
            android:background="@drawable/rainbow_bg"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_230sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/slider3" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvCallName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_26sdp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Conference Video \nCall"/>

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvCallName"
        android:text="@string/slider3_msg"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>